<form method="POST" action="/events">

    <label for="date">Date</label>
    <input type="date" name="date"/>

    {{!-- Dropdown menu for event type --}}
    <label for="type">Type</label>
      <select name="type" value="Select...">
        <option value="">Select...</option>
        <option value="Education">Education</option>
        <option value="Recurring">Recurring</option>
        <option value="Wedding">Wedding</option>
        <option value="Corporate">Corporate</option>
        <option value="Holiday">Holiday</option>
    </select>

    <label for="attendees">Attendees</label>
    <input type="number" name="attendees"/>

    <label for="title">Title</label>
    <input type="text" name="title"/>

    <label for="description">Description</label>
    <input type="text" name="description"/>

    {{!-- Dropdown menu for exhibit list --}}
    <label for="location">Exhibit</label>
      <select name="location" value="Select...">
        <option value="">Select...</option>
        <option value="Ocean's Ballroom">Ocean's Ballroom</option>
        <option value="Atlantic Ballroom">Atlantic Ballroom</option>
        <option value="Pacific Ballroom">Pacific Ballroom</option>
        <option value="Artic Ballroom">Artic Ballroom</option>
        <option value="Entire Aquarium Event">Entire Aquarium Event</option>
        <option value="Gallery Event">Gallery Event</option>
        <option value="Pemberton Place">Pemberton Place</option>
    </select>

    <label for="staff">Staff Needed</label>
    <input type="number" name="staff"/>

    <input type="submit" value="Submit Event" />
</form>

<form method="GET" action="/events">
    <input type="submit" value="Back to Main Event List" />
</form>