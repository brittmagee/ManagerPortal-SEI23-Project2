<form method="POST" action="/feedback/{{allFeedback._id}}?_method=PUT">

    <label for="date">Date</label>
    <input type="date" name="date" value="{{newFeedback.date}}"/>

    {{!-- Dropdown menu for feedback type --}}
    <label for="type">Type</label>
      <select name="type" value="{{newFeedback.type}}">
        <option value="Exhibit">Exhibit</option>
        <option value="Event">Event</option>
        <option value="Other">Other</option>
    </select>

    <label for="title">Title</label>
    <input type="text" name="title" value="{{newFeedback.title}}"/>

    <label for="description">Description</label>
    <input type="text" name="description" value="{{newFeedback.description}}"/>

    <label for="staff">Staff Required</label>
    <input type="number" name="staff" value="{{newFeedback.staff}}"/>

        {{!-- Dropdown menu for status --}}
    <label for="status">Status</label>
      <select name="status" value="{{newFeedback.status}}">
        <option value="Pending">Pending</option>
        <option value="In Progress">In Progress</option>
        <option value="Shelved">Shelved</option>
        <option value="Completed">Completed</option>
    </select>

            {{!-- Dropdown menu for priority --}}
    <label for="priority">Priority</label>
       <select name="priority" value="{{newFeedback.priority}}"> 
        <option value="Urgent">P1</option>
        <option value="High">P2</option>
        <option value="Medium">P3</option>
        <option value="Low">P4</option>
    </select>

    <input type="submit" value="Update Feedback" />
</form>

<form method="GET" action="/feedback">
    <input type="submit" value="Back to Feedback List" />
</form>