<h2>New Feedback Entry</h2>
<form method="POST" action="/feedback" class="newMoveForm">

    <label for="date">Date</label>
    <input type="date" name="date"/>

    {{!-- Dropdown menu for feedback type --}}
    <label for="type">Type</label>
      <select name="type" value="Select...">
        <option value="Exhibit">Exhibit</option>
        <option value="Event">Event</option>
        <option value="Other">Other</option>
    </select>

    <label for="title">Title</label>
    <input type="text" name="title"/>

    <label for="description">Description</label>
    <input type="text" name="description"/>

    <label for="staff">Staff Required</label>
    <input type="number" name="staff"/>

        {{!-- Dropdown menu for status --}}
    <label for="status">Status</label>
      <select name="status" value="Select...">
        <option value="Pending">Pending</option>
        <option value="In Progress">In Progress</option>
        <option value="Shelved">Shelved</option>
        <option value="Completed">Completed</option>
    </select>

            {{!-- Dropdown menu for priority --}}
    <label for="priority">Priority</label>
       <select name="priority" value="Select..."> 
        <option value="Urgent">P1</option>
        <option value="High">P2</option>
        <option value="Medium">P3</option>
        <option value="Low">P4</option>
    </select>

    <input type="submit" value="Submit Feedback" class="submitNewMove"/>
</form>

